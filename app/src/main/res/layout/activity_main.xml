<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/backgound"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City Weather App"
        android:gravity="center"
        android:textSize="32dp"
        android:layout_marginTop="-100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location "
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-25dp"/>

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude: "
        android:textSize="18sp"
        android:layout_below="@id/tv_latitude"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textSize="18sp"
        android:layout_below="@id/tv_longitude"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Time: "
        android:textSize="18sp"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Weather"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter city name"
        android:layout_below="@id/City"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/tv_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Info: "
        android:textSize="18sp"
        android:layout_below="@id/et_city_name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btn_fetch_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Weather"
        android:layout_below="@id/tv_weather_info"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:layout_below="@id/btn_fetch_weather"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
</RelativeLayout>